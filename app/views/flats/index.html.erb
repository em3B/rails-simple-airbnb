<div class="navbar">
  <h2 id="home"><%= link_to "Simple Airbnb", flats_path %></h2>

  <div id="right-side">
    <div id="navbar-search">
      <%= form_for(@flats.name) do |f| %>
        <div id="search-text">
          <%= f.text_field :name, placeholder: "Search" %>
        </div>
        <div id="form-btn">
          <%= f.submit "Search" %>
        </div>
      <% end %>
      <button id="btn-add-flat"><%= link_to "Add Flat", new_flat_path %></button>
    </div>
  </div>
</div>

<h1>All our Flats</h1>
<p>All <%= @flats.count %> flats.</p>

<% @flats.each do |flat| %>
  <div class="card-flat">
    <%= image_tag "/assets/home decor items.png" %>
    <div class="card-infos">
      <div>
        <h2><%= flat.name %></h2>
        <p><%= flat.description %></p>
      </div>
      <div class="card-bottom">
        <h2 class="card-flat-guests">👩‍👦‍👦<%= flat.number_of_guests %></h2>
        <h2 class="card-flat-pricing">£<%= flat.price_per_night %></h2>
        <h2><%= link_to "More info ", flat_path(flat.id) %><%= link_to "Edit ", edit_flat_path(flat.id) %><%= link_to "Remove", flat_path(flat.id), method: :delete  %></h2>
      </div>
    </div>
  </div>
<% end %>
